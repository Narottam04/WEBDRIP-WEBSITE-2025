---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/lvl2Components/Navbar.astro";
import ScrollingText from "../components/lvl1Components/ScrollingText.astro";
import Footer from "../components/lvl2Components/Footer.astro";
import { ArrowRight } from "@lucide/astro";
import Faq from "../components/lvl2Components/Faq.astro";

const clientStats = [
  "5+ years of experience",
  "> 95% / client retention rate",
  "100+ / satisfied clients",
  // "250+ / projects finished",
];
---

<style>
  .contact-form-wrapper {
    position: relative;
  }

  .contact-form-wrapper::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 1.5rem; /* Matches the form's rounded-3xl */
    border: 2px solid transparent;
    background: linear-gradient(360deg, #1a2a4c, #5676c9d1, white) border-box;
    -webkit-mask:
      linear-gradient(#fff 0 0) padding-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: destination-out;
    mask-composite: exclude;
    opacity: 1;
    transition: opacity 0.3s ease-in-out;
  }

  .contact-form-wrapper:hover::before {
    opacity: 0.8;
  }

  .gradient-button {
    background: linear-gradient(360deg, #1a2a4c, #5676c9d1, white);
    color: white;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .gradient-button:hover {
    background: linear-gradient(360deg, #1a2a4c, #4864b8, #f0f0f0);
  }
</style>

<Layout>
  <Navbar />

  <div class="mt-40 mb-60 p-8">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="flex justify-between items-start mb-12">
        <button
          class="bg-blue-100 text-blue-700 border border-blue-200 hover:bg-blue-200 px-4 py-2 rounded-md text-sm font-medium transition-colors"
        >
          â€¢ Contact me
        </button>
      </div>

      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Left Column -->
        <div class="space-y-8">
          <div>
            <h1 class="text-5xl font-semibold text-white mb-4">
              Get In Touch.
            </h1>
            <p class="text-xl text-gray-200 mb-8">
              I Will Respond To Your Enquiry Within 24 Hours.
            </p>

            <p class="text-gray-400 leading-relaxed mb-8">
              I'd love to hear about your project. You can get in touch with me
              via the form. Alternatively you can contact me on LinkedIn,
              Instagram, or X (Twitter).
            </p>
          </div>

          <!-- Social Icons -->
          <div class="flex gap-4">
            <!-- LinkedIn -->
            <a
              href="https://www.linkedin.com/in/narottam-sahu-40008a1bb/"
              target="_blank"
            >
              <div
                class="w-12 h-12 bg-slate-700 rounded-full flex items-center justify-center hover:bg-slate-600 transition-colors cursor-pointer"
              >
                <svg
                  class="w-6 h-6 text-gray-300"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                  ></path>
                </svg>
              </div>
            </a>

            <!-- Instagram -->
            <a href="https://www.instagram.com/_webdrip/" target="_blank">
              <div
                class="w-12 h-12 bg-slate-700 rounded-full flex items-center justify-center hover:bg-slate-600 transition-colors cursor-pointer"
              >
                <svg
                  class="w-6 h-6 text-gray-300"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                  ></path>
                </svg>
              </div>
            </a>

            <!-- X (Twitter) -->
            <div
              class="w-12 h-12 bg-slate-700 rounded-full flex items-center justify-center hover:bg-slate-600 transition-colors cursor-pointer"
            >
              <svg
                class="w-6 h-6 text-gray-300"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                ></path>
              </svg>
            </div>
          </div>

          <!-- Book a call section -->
          <div class="flex items-center gap-4">
            <!-- Commented out sections remain as they were -->
          </div>
        </div>

        <!-- Right Column - Form -->
        <div class="contact-form-wrapper">
          <div
            class="bg-slate-800/50 backdrop-blur-sm rounded-3xl p-8 relative z-10"
          >
            <form
              action="https://formsubmit.co/webdripdev@gmail.com"
              method="POST"
              class="space-y-6"
            >
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label
                    for="name"
                    class="text-sm font-medium text-gray-200 mb-2 block"
                  >
                    Name
                  </label>
                  <input
                    id="name"
                    name="name"
                    placeholder="Enter full name"
                    class="w-full bg-slate-700/50 border border-slate-600 rounded-xl h-12 px-4 text-sm text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    required
                  />
                </div>
                <div>
                  <label
                    for="email"
                    class="text-sm font-medium text-gray-200 mb-2 block"
                  >
                    Email
                  </label>
                  <input
                    id="email"
                    type="email"
                    name="email"
                    placeholder="Enter email"
                    class="w-full bg-slate-700/50 border border-slate-600 rounded-xl h-12 px-4 text-sm text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    required
                  />
                </div>
              </div>

              <div>
                <label
                  for="subject"
                  class="text-sm font-medium text-gray-200 mb-2 block"
                >
                  Subject
                </label>
                <select
                  id="subject"
                  name="subject"
                  class="w-full bg-slate-700/50 border border-slate-600 rounded-xl h-12 px-4 text-sm text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent appearance-none"
                  required
                >
                  <option value="" class="bg-slate-700 text-white"
                    >Select one</option
                  >
                  <option value="general" class="bg-slate-700 text-white"
                    >General Inquiry</option
                  >
                  <option value="project" class="bg-slate-700 text-white"
                    >New Project</option
                  >
                  <option value="support" class="bg-slate-700 text-white"
                    >Support</option
                  >
                </select>
              </div>

              <div>
                <label
                  for="message"
                  class="text-sm font-medium text-gray-200 mb-2 block"
                >
                  Message
                </label>
                <textarea
                  id="message"
                  name="message"
                  placeholder="How can we help you?"
                  class="w-full bg-slate-700/50 border border-slate-600 rounded-xl min-h-[120px] resize-none p-4 text-sm text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  required></textarea>
              </div>

              <button
                type="submit"
                class="w-full gradient-button text-white py-4 rounded-2xl text-base font-medium transition-all duration-300 transform hover:scale-105"
              >
                Submit enquiry
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="">
    <ScrollingText items={clientStats} speed="normal" className="py-4" />
  </div>

  <Faq />
  <Footer />
</Layout>

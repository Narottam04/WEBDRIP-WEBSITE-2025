---
// BentoGridItem.astro
export interface Props {
  className?: string;
  title?: string;
  description?: string;
}

const { className = "", title, description } = Astro.props;

// Simple class merging function to replace cn
function clsx(...classes: (string | undefined)[]) {
  return classes.filter(Boolean).join(" ");
}
---

<div
  class={clsx(
    "group/bento shadow-input row-span-1 flex flex-col justify-between space-y-4 rounded-xl border border-neutral-200 bg-white p-4 transition duration-200 hover:shadow-xl dark:border-white/[0.2] dark:bg-black dark:shadow-none",
    className
  )}
>
  <slot name="header" />
  <div class="transition duration-200 group-hover/bento:translate-x-2">
    <slot name="icon" />
    {
      title && (
        <div class="mt-2 mb-2 font-sans font-bold text-neutral-600 dark:text-neutral-200">
          {title}
        </div>
      )
    }
    {
      description && (
        <div class="font-sans text-xs font-normal text-neutral-600 dark:text-neutral-300">
          {description}
        </div>
      )
    }
  </div>
</div>

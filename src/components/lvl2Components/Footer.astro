---
// Import necessary components, like icons, here.
import Logo from "../../assets/logo.svg";

const year = new Date().getFullYear();
---

<footer class="bg-main text-white px-6 pt-40 py-12 md:px-12 lg:px-16">
  <div class="max-w-7xl mx-auto">
    <div
      class="flex flex-col lg:flex-row lg:items-start lg:justify-between mb-16"
    >
      <div class="mb-8 lg:mb-0 lg:max-w-lg">
        <h2
          class="text-3xl md:text-4xl lg:text-5xl font-base leading-tight mb-6"
        >
          What happens next usually starts with a conversation.
        </h2>
        <div class="text-xl md:text-2xl font-bold">business@webdrip.in</div>
      </div>

      <div class="lg:mt-0">
        <a
          href="/contact"
          class="inline-flex items-center gap-2 bg-white/20 hover:bg-white/30 transition-colors px-6 py-3 rounded-full text-white border border-white/30"
        >
          <div class="w-2 h-2 bg-white rounded-full"></div>
          Contact us
        </a>
      </div>
    </div>

    <div
      class="flex flex-col lg:flex-row lg:items-start lg:justify-between mb-16"
    >
      <div class="mb-8 lg:mb-0">
        <div class="flex items-center gap-2">
          <Logo class="w-60 h-20" />
        </div>
      </div>

      <div class="flex flex-col sm:flex-row gap-8 lg:gap-16">
        <div>
          <h3 class="text-sm font-medium mb-4 opacity-80">Email</h3>
          <a
            href="mailto:hello@blinkpath.com"
            class="text-white hover:opacity-80 transition-opacity"
          >
            business@webdrip.com
          </a>
        </div>

        <div>
          <h3 class="text-sm font-medium mb-4 opacity-80">Socials</h3>
          <div class="space-y-2">
            <div class="flex items-center gap-2">
              <!-- <ArrowRight class="w-4 h-4" /> -->
              <a
                href="https://www.instagram.com/_webdrip/"
                target="_blank"
                class="text-white hover:opacity-80 transition-opacity"
              >
                Instagram
              </a>
            </div>
            <div class="flex items-center gap-2">
              <!-- <ArrowRight class="w-4 h-4" /> -->
              <a
                href="https://x.com/NarottamCodez"
                target="_blank"
                class="text-white hover:opacity-80 transition-opacity"
              >
                X
              </a>
            </div>
            <div class="flex items-center gap-2">
              <!-- <ArrowRight class="w-4 h-4" /> -->
              <a
                href="https://www.linkedin.com/in/narottam-sahu-40008a1bb/"
                target="_blank"
                class="text-white hover:opacity-80 transition-opacity"
              >
                LinkedIn
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div
      class="flex flex-col sm:flex-row sm:items-center sm:justify-between pt-8 border-t border-white/20 text-sm opacity-80"
    >
      <div>
        Â© <span id="footer-year">{year}</span> WEBDRIP. All rights reserved.
      </div>
      <a
        href="#"
        class="mt-4 sm:mt-0 text-white hover:opacity-80 transition-opacity"
      >
        Privacy policy
      </a>
    </div>
  </div>
</footer>

<style>
  .bg-main {
    background-image: linear-gradient(180deg, var(--bg-darker), #2e2e2e00 49%),
      radial-gradient(
        circle farthest-corner at 50% 100%,
        #d3d7033d,
        #36363600 63%
      ),
      radial-gradient(circle farthest-corner at 100% 100%, #ffffff03, #0000 39%),
      linear-gradient(180deg, #0000 70%, #ffffff0d),
      radial-gradient(circle farthest-corner at 55% 0%, #0e0e0f, #2e2e2e00),
      linear-gradient(
        180deg,
        var(--bgp-dark),
        #8da2e3db 62%,
        var(--bgp-lighter)
      ),
      url("../../assets/giphy-1.gif");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
</style>

<script is:inline data-astro-rerun>
  document.getElementById("footer-year").innerText = new Date().getFullYear();
</script>

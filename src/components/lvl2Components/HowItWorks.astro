---
// src/components/HowItWorks.astro

// Helper function to define the process steps data.
// This makes the template cleaner and easier to manage.
const processSteps = [
  {
    id: '01',
    tag: 'Discovery',
    title: "I'll dive deep into your story, vision, and message.",
    duration: '1-3 days',
    details: [
      { point: 'Initial Consultation', description: 'Understand the project goals, target audience, platforms, and key message.' },
      { point: 'Creative Briefing', description: 'Gather brand assets, references, and technical specifications.' },
      { point: 'Concept Exploration', description: 'Research visual direction, style inspiration, and tone.' },
    ],
  },
  {
    id: '02',
    tag: 'Design & Storyboarding',
    title: "I'll map out the visual story and start shaping the style.",
    duration: '3-5 days',
    details: [
        { point: 'Script & Voiceover (if needed)', description: 'Write or refine the script, confirm voiceover talent and tone.' },
        { point: 'Storyboard & Styleframes', description: 'Sketch out scenes, camera moves, and transitions with design.' },
        { point: 'Design Exploration', description: 'Develop frames with visual style, typography, and mood.' },
        { point: 'Client Review', description: 'Review storyboards and styleframes for approval.' },
    ],
  },
  {
    id: '03',
    tag: 'Animation & Production',
    title: 'Time to bring the visuals to life with movement, rhythm, and finesse.',
    duration: '5-10 days',
    details: [
      { point: 'Scene Animation', description: 'Animate sequences using After Effects, Blender, or other tools.' },
      { point: 'Sound Design', description: 'Add music, sound effects, and sync voiceover.' },
      { point: 'Client Check-ins', description: 'Share work-in-progress drafts for early feedback.' },
    ],
  },
];
---

<style>
    /* Using a more specific selector to ensure body styles from this component don't conflict globally if not scoped. */
    .how-it-works-container {
        font-family: 'Inter', sans-serif;
    }
</style>

<div class="how-it-works-container text-white p-4 sm:p-6 md:p-8 mt-[100px]">
  <div class="max-w-7xl mx-auto">
    <!-- Component Header -->
    <header class="mb-12 md:mb-16">
      <p class="text-blue-400 font-semibold font-stretch-150% text-sm mb-2">[03] â€” Process</p>
      <h2 class="text-5xl md:text-6xl font-semibold">How it works</h2>
    </header>

    <!-- Process Steps List -->
    <div class="space-y-10">
      {processSteps.map((step) => (
        <div class="process-step border-b border-gray-800/70 pb-10">
          <div class="grid grid-cols-12 gap-x-4 md:gap-x-8 items-start">
            <!-- Left: Tag -->
            <div class="col-span-12 sm:col-span-3 lg:col-span-2 mb-4 sm:mb-0">
              <span class="inline-block border border-gray-700 text-gray-300 rounded-full px-4 py-1.5 text-sm">
                {step.tag}
              </span>
            </div>

            <!-- Middle: Content -->
            <div class="col-span-12 sm:col-span-9 lg:col-span-7 flex items-start gap-4 md:gap-8">
              <span class="text-5xl md:text-6xl font-light text-blue-400">/{step.id}</span>
              <div class="pt-2">
                <h3 class="text-2xl font-medium mb-6">{step.title}</h3>
                <ul class="space-y-3">
                  {step.details.map(detail => (
                    <li class="flex items-start">
                      <span class="text-blue-400 text-xl mr-3 mt-[-2px]">*</span>
                      <p class="text-gray-300"><strong class="font-medium text-white">{detail.point}:</strong> {detail.description}</p>
                    </li>
                  ))}
                </ul>
              </div>
            </div>

            <!-- Right: Duration -->
            <div class="hidden lg:flex col-span-3 items-center justify-end gap-2 text-blue-400 text-sm pt-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clock" viewBox="0 0 16 16">
                    <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71z"/>
                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0"/>
                </svg>
                <span>{step.duration}/</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>
